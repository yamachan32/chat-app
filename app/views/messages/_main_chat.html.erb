<div class = 'main_header'>

  <div class = 'current_room'>
    <a  href='#'>Room Name</a>
  </div>

  <div class = 'end_room'>
    <a  href='#'>チャットを終了する</a>
  </div>

</div>
<%# 
<div class = 'messages'>
  <div class = 'message'>
    <div class = 'chat_title'>
      <div class = 'chat_user'>
        <a href='#'>Chat User</a>
      </div>
    
      <div class = 'chat_date'>
        <a href='#'>Chat date</a>
      </div>
    </div>
    <div class = 'chat_text'>
        <a href='#'>Chat text</a>
    </div>
  </div> %>

  <div class = 'messages'>
   <%= render partial: 'message', collection: @messages %>
  </div>

<%= form_with model: [@room, @message], class: 'chat_form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>