<div class = 'message'>

  <div class = 'chat_title'>
    <div class = 'chat_user'>
      <%= message.user.name %>
    </div>
    
    <div class = 'chat_date'>
      <%= l message.created_at %>
    </div>
  </div>

  <div class = 'chat_text'>
      <%= message.content %>
  </div>
      <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>

</div>
